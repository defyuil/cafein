<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cafein.mapper.ShipMapper">

	<!-- 출하 조회 -->
	<select id="getSHList" resultType="com.cafein.domain.ShipVO">
		<!-- select * from ship -->
		SELECT sh.shipid, sh.shipcode, sh.shipdate, sh.membercode,
		sh.shipcount, sh.stockid, sh.shipsts, sh.lotnumber, sh.pocode 
		FROM ship sh
		JOIN stock st ON sh.stockid = st.stockid;
<!-- 		JOIN work wk ON sh.workcode = wk.workcode -->
<!-- 		JOIN client cli on sh.clientcode = cli.clientcode; -->
	</select>
	
	<!-- 작업지시 조회 -->
	<select id="getWKList" resultType="com.cafein.domain.WorkVO">
		<!-- select * from ship -->
		SELECT * FROM work
	</select>
	
	<!-- 실적 조회 -->
	<select id="getPFList" resultType="com.cafein.domain.WorkVO">
		<!-- select * from ship -->
		SELECT * FROM work
	</select>

</mapper>